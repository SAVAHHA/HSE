                            <Label>31 августа 2020 г.</Label>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Padding="0">
                            <Label>Сроки реализации проекта:</Label>
                            <Label>8 июля - 6 августа</Label>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Padding="0" >
