<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             TabBarBackgroundColor="White"
             TabBarTitleColor="#DC143C"
             xmlns:pages="clr-namespace:HSEapp.Pages"
             x:Class="HSEapp.MainPage">

    <TabBar>
        <Tab Title="Ярмарка" Icon="Fair">
            <ShellContent Title="Fair" Route="fair" ContentTemplate="{DataTemplate pages:Fair.FairMainPage}"></ShellContent>
        </Tab>

        <Tab Title="Мероприятия" Icon="Event">
            <ShellContent Title="Event" Route="event" ContentTemplate="{DataTemplate pages:Event.EventMainPage}"></ShellContent>
        </Tab>

        <Tab Title="Волонтерская деятельность" Icon="Event">
            <ShellContent Title="Event" Route="event" ContentTemplate="{DataTemplate pages:Volonteer.VolonteerMainPage}"></ShellContent>
        </Tab>

        <Tab Title="Отзывы" Icon="Event">
            <ShellContent Title="Event" Route="event" ContentTemplate="{DataTemplate pages:Review.ReviewMainPage}"></ShellContent>
        </Tab>
    </TabBar>
</Shell>